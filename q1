a=["Apple","Ice-cream","Nuts"]
b=[100,200,300]
c=["kg","l","gr"]
d=[1,2,3]

class Inventory():
    def __init__(self,amount,unit, code):
        self.amount=amount
        self.unit=unit
        self.code=code

    def __str__(self):
        return f"Inventory code: {self.code}, Inventory amount: {self.amount}"

    def add(self,add_amount):
        self.amount += add_amount


for i in range(0,len(a)):
    globals()[a[i]]=Inventory(b[i],c[i],d[i])

print(Apple)
Apple.add(10)
print(Apple)
